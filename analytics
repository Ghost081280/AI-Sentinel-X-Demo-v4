            <div class="ai-chat-messages" id="aiChatMessages">
                <div class="ai-message">
                    <div class="ai-message-bubble">
                        AnalyticsEngine: Processing 2.4M metrics with 99.8% accuracy. ComplianceMonitor shows 3/4 frameworks compliant. LogAgent securing all audit trails with hybrid-resistant signatures.
                    </div>
                    <div class="ai-message-time">Just now</div>
                </div>
            </div>
            <div class="ai-chat-input-container">
                <input 
                    type="text" 
                    class="ai-chat-input" 
                    id="aiChatInput" 
                    placeholder="Enter analytics command..."
                    onkeypress="handleChatKeyPress(event)"
                >
                <button class="ai-chat-send" id="aiChatSend" onclick="sendChatMessage()">SEND</button>
            </div>
        </div>
        <button class="ai-chat-toggle" onclick="toggleChat()">ü§ñ</button>
    </div>

    <script src="shared.js"></script>
    <script>
        // Analytics page-specific configurations using shared.js infrastructure
        let analyticsFeedId = 'analytics-feed';

        // Mock data for demonstration - uses shared.js ComplianceConfigs
        const AnalyticsData = {
            metrics: [
                { label: 'Events Processed', value: '2.4M', change: '+12%', positive: true, unit: '/hour' },
                { label: 'ML Predictions', value: '847K', change: '+8%', positive: true, unit: '/hour' },
                { label: 'Accuracy Rate', value: '99.8', change: '+0.2%', positive: true, unit: '%' },
                { label: 'False Positives', value: '0.2', change: '-0.1%', positive: true, unit: '%' },
                { label: 'Response Time', value: '0.3', change: '-0.05s', positive: true, unit: 's' },
                { label: 'Data Volume', value: '18.2', change: '+2.1TB', positive: true, unit: 'TB' }
            ],
            logs: [
                { timestamp: new Date(), message: 'System audit log initialized with Dilithium-3 signature', type: '' },
                { timestamp: new Date(Date.now() - 60000), message: 'SOC2 compliance verification completed successfully', type: '' },
                { timestamp: new Date(Date.now() - 120000), message: 'Certificate expiration warning: API Gateway cert expires in 6 days', type: 'warning' },
                { timestamp: new Date(Date.now() - 180000), message: 'Failed login attempt detected and logged from IP 185.*.*.* ', type: 'warning' },
                { timestamp: new Date(Date.now() - 240000), message: 'Encryption key rotation completed for all systems', type: '' },
                { timestamp: new Date(Date.now() - 300000), message: 'ISO27001 audit scheduled for next quarter', type: '' },
                { timestamp: new Date(Date.now() - 360000), message: 'Database backup completed and encrypted with hybrid algorithms', type: '' },
                { timestamp: new Date(Date.now() - 420000), message: 'Critical security event: Unauthorized access attempt blocked', type: 'error' }
            ]
        };

        // Analytics page initialization using shared.js infrastructure
        document.addEventListener('DOMContentLoaded', () => {
            setTimeout(() => {
                initializeAnalyticsPage();
            }, 100);
        });

        function initializeAnalyticsPage() {
            // Initialize neural background from shared.js
            if (typeof initNeuralBackground === 'function') {
                initNeuralBackground();
            }

            // Initialize page context from shared.js
            if (typeof initializePageContext === 'function') {
                initializePageContext();
            }

            // Initialize analytics activity feed using shared.js ActivityFeedManager
            if (typeof activityFeedManager !== 'undefined' && activityFeedManager) {
                // Initialize analytics feed with specific message types
                activityFeedManager.initializeFeed(analyticsFeedId, 'analytics');
                activityFeedManager.setFeedContainer(analyticsFeedId, 'analyticsActivityFeed');
                
                // Add initial analytics-specific messages
                activityFeedManager.addMessage(analyticsFeedId, 'üìä AnalyticsEngine: Processing 2.4M metrics with 99.8% ML accuracy', '', 'AnalyticsEngine');
                activityFeedManager.addMessage(analyticsFeedId, '‚úÖ ComplianceMonitor: 3/4 frameworks compliant, automated scanning active', '', 'ComplianceMonitor');
                activityFeedManager.addMessage(analyticsFeedId, 'üìù LogAgent: All audit trails secured with Dilithium-3 signatures', 'encryption', 'LogAgent');
                activityFeedManager.addMessage(analyticsFeedId, 'üß† Predictive models: Threat forecasting 2.3s ahead with 99.8% accuracy', '', 'AnalyticsEngine');
                
                // Start auto-generation every 5 seconds for analytics feed
                activityFeedManager.startAutoGeneration(analyticsFeedId, 5000);
            } else {
                console.log('ActivityFeedManager not available yet, retrying...');
                setTimeout(initializeAnalyticsPage, 200);
                return;
            }

            // Initialize chat system from shared.js
            if (typeof SentinelChat !== 'undefined') {
                window.sentinelChat = new SentinelChat();
            }

            // Populate analytics sections
            populateMetricsDashboard();
            populateComplianceOverview();
            populateFrameworkGrid();
            populateLogFeed();
            
            // Start real-time updates
            setInterval(() => {
                updateMetrics();
                generateLogEntry();
            }, 5000);
        }

        function populateMetricsDashboard() {
            const dashboard = document.getElementById('metricsDashboard');
            if (!dashboard) return;
            
            dashboard.innerHTML = '';

            AnalyticsData.metrics.forEach(metric => {
                const card = document.createElement('div');
                card.className = 'metric-card';
                card.innerHTML = `
                    <div class="metric-value">${metric.value}<small style="font-size: 16px;">${metric.unit}</small></div>
                    <div class="metric-label">${metric.label}</div>
                    <div class="metric-change ${metric.positive ? 'positive' : 'negative'}">
                        <span>${metric.positive ? '‚Üó' : '‚Üò'}</span>
                        <span>${metric.change}</span>
                    </div>
                `;
                dashboard.appendChild(card);
            });
        }

        function populateComplianceOverview() {
            const overview = document.getElementById('complianceOverview');
            if (!overview) return;
            
            overview.innerHTML = '';

            // Use shared ComplianceConfigs if available
            const frameworks = (typeof ComplianceConfigs !== 'undefined' && ComplianceConfigs.frameworks) 
                ? ComplianceConfigs.frameworks 
                : [
                    { id: 'soc2', name: 'SOC 2', status: 'compliant', coverage: '96%', issuesFound: 0 },
                    { id: 'iso27001', name: 'ISO 27001', status: 'compliant', coverage: '94%', issuesFound: 2 },
                    { id: 'pcidss', name: 'PCI DSS', status: 'pending', coverage: '85%', issuesFound: 5 },
                    { id: 'hipaa', name: 'HIPAA', status: 'compliant', coverage: '98%', issuesFound: 1 }
                ];

            const compliant = frameworks.filter(f => f.status === 'compliant').length;
            const total = frameworks.length;
            const avgCoverage = Math.round(frameworks.reduce((sum, f) => 
                sum + parseInt(f.coverage.replace('%', '')), 0) / total);
            const totalIssues = frameworks.reduce((sum, f) => sum + f.issuesFound, 0);

            const overviewData = [
                { label: 'Frameworks', value: `${compliant}/${total}` },
                { label: 'Avg Coverage', value: `${avgCoverage}%` },
                { label: 'Total Issues', value: totalIssues },
                { label: 'Next Audit', value: '42d' }
            ];

            overviewData.forEach(item => {
                const card = document.createElement('div');
                card.className = 'overview-card';
                card.innerHTML = `
                    <div class="overview-value">${item.value}</div>
                    <div class="overview-label">${item.label}</div>
                `;
                overview.appendChild(card);
            });
        }

        function populateFrameworkGrid() {
            const grid = document.getElementById('frameworkGrid');
            if (!grid) return;
            
            grid.innerHTML = '';

            // Use shared ComplianceConfigs if available
            const frameworks = (typeof ComplianceConfigs !== 'undefined' && ComplianceConfigs.frameworks) 
                ? ComplianceConfigs.frameworks 
                : [
                    {
                        id: 'soc2',
                        name: 'SOC 2',
                        status: 'compliant',
                        coverage: '96%',
                        lastAudit: '2024-09-15',
                        nextAudit: '2025-03-15',
                        issuesFound: 0
                    },
                    {
                        id: 'iso27001',
                        name: 'ISO 27001',
                        status: 'compliant',
                        coverage: '94%',
                        lastAudit: '2024-08-20',
                        nextAudit: '2025-08-20',
                        issuesFound: 2
                    },
                    {
                        id: 'pcidss',
                        name: 'PCI DSS',
                        status: 'pending',
                        coverage: '85%',
                        lastAudit: '2024-06-10',
                        nextAudit: '2025-01-10',
                        issuesFound: 5
                    },
                    {
                        id: 'hipaa',
                        name: 'HIPAA',
                        status: 'compliant',
                        coverage: '98%',
                        lastAudit: '2024-10-01',
                        nextAudit: '2025-04-01',
                        issuesFound: 1
                    }
                ];

            frameworks.forEach(framework => {
                const card = document.createElement('div');
                card.className = 'framework-card';
                
                const coverage = parseInt(framework.coverage.replace('%', ''));
                const nextAuditDays = Math.ceil((new Date(framework.nextAudit) - new Date()) / (1000 * 60 * 60 * 24));

                card.innerHTML = `
                    <div class="framework-header">
                        <div class="framework-name">${framework.name}</div>
                        <div class="framework-status ${framework.status.replace(' ', '-')}">${framework.status.toUpperCase()}</div>
                    </div>
                    <div class="framework-details">
                        <div class="framework-detail">
                            <span class="detail-label">Last Audit:</span>
                            <span class="detail-value">${formatDateFromISO(framework.lastAudit + 'T00:00:00Z')}</span>
                        </div>
                        <div class="framework-detail">
                            <span class="detail-label">Next Audit:</span>
                            <span class="detail-value">${nextAuditDays} days</span>
                        </div>
                        <div class="framework-detail">
                            <span class="detail-label">Issues Found:</span>
                            <span class="detail-value" style="color: ${framework.issuesFound > 0 ? 'var(--warning)' : 'var(--success)'}">${framework.issuesFound}</span>
                        </div>
                        <div class="coverage-bar">
                            <div class="coverage-fill" style="width: ${coverage}%"></div>
                        </div>
                        <div class="framework-detail">
                            <span class="detail-label">Coverage:</span>
                            <span class="detail-value">${framework.coverage}</span>
                        </div>
                    </div>
                    <div class="framework-actions">
                        <button class="framework-btn primary" onclick="auditFramework('${framework.id}')">Audit</button>
                        <button class="framework-btn" onclick="frameworkDetails('${framework.id}')">Details</button>
                        <button class="framework-btn" onclick="remediate('${framework.id}')">Fix Issues</button>
                    </div>
                `;

                grid.appendChild(card);
            });
        }

        function populateLogFeed() {
            const feed = document.getElementById('logFeed');
            if (!feed) return;
            
            feed.innerHTML = '';

            AnalyticsData.logs.forEach(log => {
                addLogEntry(log.message, log.type, log.timestamp);
            });
        }

        function addLogEntry(message, type = '', timestamp = new Date()) {
            const feed = document.getElementById('logFeed');
            if (!feed) return;
            
            const entry = document.createElement('div');
            entry.className = `log-entry ${type}`;
            
            entry.innerHTML = `
                <div class="log-timestamp">${timestamp.toLocaleString()}</div>
                <div class="log-message">${message}</div>
                <div class="log-signature">‚úì Dilithium-3 signature verified</div>
            `;
            
            feed.insertBefore(entry, feed.firstChild);
            
            // Keep only last 20 entries
            while (feed.children.length > 20) {
                feed.removeChild(feed.lastChild);
            }
        }

        function generateLogEntry() {
            const logMessages = [
                { msg: 'Predictive model updated with new threat patterns', type: '' },
                { msg: 'Compliance scan completed: All frameworks within acceptable thresholds', type: '' },
                { msg: 'Anomaly detected in network traffic pattern - investigating', type: 'warning' },
                { msg: 'Automated backup verification completed successfully', type: '' },
                { msg: 'Certificate renewal reminder: 2 certificates expire within 30 days', type: 'warning' },
                { msg: 'AI model retrained with latest threat intelligence data', type: '' },
                { msg: 'System performance metrics within normal parameters', type: '' },
                { msg: 'Failed authentication attempt logged and analyzed', type: 'error' }
            ];

            if (Math.random() > 0.7) {
                const log = logMessages[Math.floor(Math.random() * logMessages.length)];
                addLogEntry(log.msg, log.type);
            }
        }

        function updateMetrics() {
            // Simulate real-time metric updates
            const metricCards = document.querySelectorAll('.metric-card .metric-value');
            metricCards.forEach((card, index) => {
                if (Math.random() > 0.9) {
                    const currentValue = parseFloat(card.textContent);
                    const variation = (Math.random() - 0.5) * 0.1;
                    const newValue = Math.max(0, currentValue + variation);
                    
                    if (index === 0) { // Events Processed
                        card.innerHTML = `${(newValue).toFixed(1)}M<small style="font-size: 16px;">/hour</small>`;
                    } else if (index === 2) { // Accuracy Rate
                        card.innerHTML = `${Math.min(99.9, newValue).toFixed(1)}<small style="font-size: 16px;">%</small>`;
                    }
                }
            });
        }

        // Compliance Actions using shared chat system
        function auditFramework(frameworkId) {
            if (window.sentinelChat && typeof SentinelState !== 'undefined' && !SentinelState.chatOpen) {
                window.sentinelChat.toggle();
            }
            setTimeout(() => {
                if (window.sentinelChat) {
                    window.sentinelChat.addMessage(`audit ${frameworkId}`, true);
                    setTimeout(() => {
                        window.sentinelChat.addMessage(`ComplianceMonitor: Initiating ${frameworkId} audit. Scanning controls and compliance requirements. Estimated completion: 15-20 minutes. All findings will be Dilithium-signed.`, false);
                    }, 800);
                }
            }, 300);
        }

        function frameworkDetails(frameworkId) {
            if (window.sentinelChat && typeof SentinelState !== 'undefined' && !SentinelState.chatOpen) {
                window.sentinelChat.toggle();
            }
            setTimeout(() => {
                if (window.sentinelChat) {
                    window.sentinelChat.addMessage(`ComplianceMonitor: Retrieving ${frameworkId} framework details. Status, coverage, audit history, and remediation recommendations available.`, false);
                }
            }, 300);
        }

        function remediate(frameworkId) {
            if (window.sentinelChat && typeof SentinelState !== 'undefined' && !SentinelState.chatOpen) {
                window.sentinelChat.toggle();
            }
            setTimeout(() => {
                if (window.sentinelChat) {
                    window.sentinelChat.addMessage(`ComplianceMonitor: Auto-remediation initiated for ${frameworkId} issues. Coordinating with EncryptionDeployer and NetworkMapper for compliance gaps.`, false);
                }
            }, 300);
        }

        function generateComplianceReport() {
            if (window.sentinelChat && typeof SentinelState !== 'undefined' && !SentinelState.chatOpen) {
                window.sentinelChat.toggle();
            }
            setTimeout(() => {
                if (window.sentinelChat) {
                    window.sentinelChat.addMessage('generate compliance report', true);
                    setTimeout(() => {
                        window.sentinelChat.addMessage(`ComplianceMonitor: Comprehensive compliance report generated. Framework analysis, gap assessment, and remediation plans included. Report encrypted and Dilithium-signed for auditor review.`, false);
                    }, 1500);
                }
            }, 300);
        }

        function scheduleAudit() {
            if (window.sentinelChat && typeof SentinelState !== 'undefined' && !SentinelState.chatOpen) {
                window.sentinelChat.toggle();
            }
            setTimeout(() => {
                if (window.sentinelChat) {
                    window.sentinelChat.addMessage('ComplianceMonitor: Audit scheduling interface ready. Next recommended audits: PCI DSS (85 days), ISO27001 (180 days). All audits include encryption compliance verification.', false);
                }
            }, 300);
        }

        // Analytics Actions
        function generateFullReport() {
            if (window.sentinelChat && typeof SentinelState !== 'undefined' && !SentinelState.chatOpen) {
                window.sentinelChat.toggle();
            }
            setTimeout(() => {
                if (window.sentinelChat) {
                    window.sentinelChat.addMessage('generate full analytics report', true);
                    setTimeout(() => {
                        window.sentinelChat.addMessage('AnalyticsEngine: Comprehensive report generation initiated. Including threat predictions, performance metrics, compliance status, and log analysis. Report will be encrypted and Dilithium-signed. ETA: 3-5 minutes.', false);
                    }, 1200);
                }
            }, 300);
        }

        function exportAnalytics() {
            if (window.sentinelChat && typeof SentinelState !== 'undefined' && !SentinelState.chatOpen) {
                window.sentinelChat.toggle();
            }
            setTimeout(() => {
                if (window.sentinelChat) {
                    window.sentinelChat.addMessage('AnalyticsEngine: Data export prepared. 2.4M processed events, ML predictions, and compliance metrics ready for download. All data encrypted with hybrid algorithms.', false);
                }
            }, 300);
        }

        function exportLogs() {
            if (window.sentinelChat && typeof SentinelState !== 'undefined' && !SentinelState.chatOpen) {
                window.sentinelChat.toggle();
            }
            setTimeout(() => {
                if (window.sentinelChat) {
                    window.sentinelChat.addMessage('LogAgent: Secure log export initiated. All entries Dilithium-3 signed for forensic integrity. Export includes metadata and signature verification tools.', false);
                }
            }, 300);
        }

        function searchLogs() {
            if (window.sentinelChat && typeof SentinelState !== 'undefined' && !SentinelState.chatOpen) {
                window.sentinelChat.toggle();
            }
            setTimeout(() => {
                if (window.sentinelChat) {
                    window.sentinelChat.addMessage('LogAgent: Log search interface ready. Query tampering-proof audit trail. Use "search logs [keyword]" or "search logs --date YYYY-MM-DD" for specific searches.', false);
                }
            }, 300);
        }

        // Utility functions
        function formatDateFromISO(isoString) {
            const date = new Date(isoString);
            return date.toLocaleDateString('en-US', { 
                year: 'numeric', 
                month: 'short', 
                day: 'numeric' 
            });
        }

        // Cleanup activity feed on page unload
        window.addEventListener('beforeunload', () => {
            if (typeof activityFeedManager !== 'undefined' && activityFeedManager) {
                activityFeedManager.stopAutoGeneration(analyticsFeedId);
            }
        });

        // Global functions for compatibility - leveraging shared chat system
        window.toggleChat = () => {
            if (window.sentinelChat) {
                window.sentinelChat.toggle();
            }
        };
        
        window.sendChatMessage = () => {
            const input = document.getElementById('aiChatInput');
            if (input && input.value.trim() && window.sentinelChat) {
                window.sentinelChat.sendMessage(input.value.trim());
                input.value = '';
            }
        };
        
        window.handleChatKeyPress = (e) => {
            if (e.key === 'Enter') {
                sendChatMessage();
            }
        };
        
        window.showAgentShutdownModal = () => {
            const modal = document.getElementById('agentShutdownModal');
            if (modal) modal.style.display = 'flex';
        };
        
        window.closeModal = () => {
            const modal = document.getElementById('agentShutdownModal');
            if (modal) modal.style.display = 'none';
        };
        
        window.closeModalOnOverlay = (e) => {
            if (e.target.classList.contains('modal-overlay')) {
                closeModal();
            }
        };
        
        window.confirmAgentShutdown = () => {
            if (typeof SentinelState !== 'undefined') {
                SentinelState.agentActive = !SentinelState.agentActive;
                
                // Update UI elements
                const agentStatus = document.querySelector('.agent-status');
                const agentTitle = document.querySelector('.agent-title');
                const agentStatusText = document.querySelector('.agent-status-text');
                
                if (SentinelState.agentActive) {
                    if (agentStatus) {
                        agentStatus.style.background = 'rgba(0, 255, 136, 0.1)';
                        agentStatus.style.borderColor = '#00ff88';
                    }
                    if (agentTitle) {
                        agentTitle.textContent = 'AI Agent Active';
                        agentTitle.style.color = 'var(--primary)';
                    }
                    if (agentStatusText) {
                        agentStatusText.textContent = 'Autonomous with Manual Override';
                    }
                    
                    // Resume analytics systems and activity feed
                    if (typeof activityFeedManager !== 'undefined' && activityFeedManager) {
                        activityFeedManager.startAutoGeneration(analyticsFeedId, 5000);
                        activityFeedManager.addMessage(analyticsFeedId, 'ü§ñ Main Agent resumed: Analytics processing reactivated', '', 'Main Agent');
                    }
                } else {
                    if (agentStatus) {
                        agentStatus.style.background = 'rgba(255, 170, 0, 0.1)';
                        agentStatus.style.borderColor = '#ffaa00';
                    }
                    if (agentTitle) {
                        agentTitle.textContent = 'AI Agent Paused';
                        agentTitle.style.color = '#ffaa00';
                    }
                    if (agentStatusText) {
                        agentStatusText.textContent = 'Manual Control Only';
                    }
                    
                    // Pause analytics systems and activity feed
                    if (typeof activityFeedManager !== 'undefined' && activityFeedManager) {
                        activityFeedManager.stopAutoGeneration(analyticsFeedId);
                        activityFeedManager.addMessage(analyticsFeedId, '‚ö†Ô∏è Main Agent paused: Analytics in manual control mode', 'warning', 'Main Agent');
                    }
                }
                
                closeModal();
                
                if (SentinelState.chatOpen && window.sentinelChat) {
                    const status = SentinelState.agentActive ? 'resumed autonomous operation with analytics coordination' : 'switched to manual control mode';
                    window.sentinelChat.addMessage(`‚ö†Ô∏è Main Agent has ${status}. Analytics sub-agents ${SentinelState.agentActive ? 'active' : 'paused'}.`, false, 'system');
                }
            }
        };
        
        window.handleLogout = () => {
            if (confirm('Are you sure you want to logout? The AI agent will continue protecting your systems autonomously.')) {
                localStorage.removeItem('sentinel_auth');
                localStorage.removeItem('sentinel_scale');
                window.location.href = 'index.html';
            }
        };
    </script>
</body>
</html>
